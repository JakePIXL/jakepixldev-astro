---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
export interface Props {
	title: string;
	description?: string;
	ogImage?: string;
	articleDate?: string;
}
import Logo from "../components/Logo.astro";
import { Icon } from "astro-icon/components";

const { title, ogImage, description, articleDate } = Astro.props;

const imgUrl = ogImage || new URL("/social-card.png", Astro.url).href;
const disc = description || "JakePIXL's Personal Development Blog";

const fullTitle = `JakePIXL - ${title}`;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
		<meta name="msapplication-TileColor" content="#2d89ef" />
		<meta name="theme-color" content="#f8feff" />
		<meta name="generator" content={Astro.generator} />
		<title>{fullTitle}</title>

		<meta name="title" content={fullTitle} />
		<meta name="description" content={description} />
		<meta name="author" content="Jake Evans" />

		<meta property="og:type" content={"website"} />
		<meta property="og:title" content={fullTitle} />
		<!-- <meta property="og:url" content={canonicalURL} /> -->
		<meta property="og:site_name" content={"JakePIXL.dev"} />
		<meta property="og:locale" content="en_CA" />
		<meta property="og:image" content={imgUrl} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<!-- <meta property="twitter:url" content={canonicalURL} /> -->
		<meta property="twitter:title" content={fullTitle} />
		<meta property="twitter:description" content={disc} />
		<meta property="twitter:image" content={imgUrl} />
		{
			articleDate && (
				<>
					<meta property="article:author" content="Jake Evans" />
					<meta property="article:published_time" content={articleDate} />
				</>
			)
		}
		<link rel="alternate" type="application/rss+xml" title="JakePIXL's Dev Blog" href="/rss.xml" />

		<GoogleFontsOptimizer
			url="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
		/>
	</head>
	<body
		class="min-w-screen flex min-h-screen w-full flex-col space-y-4 bg-slate-100 p-0 font-mono text-gray-800 dark:bg-slate-900 dark:text-slate-100"
	>
		<header class="mx-auto flex w-full max-w-3xl items-center justify-between p-4">
			<a href="/" class="flex flex-row items-center gap-2">
				<div class="h-20 w-20">
					<Logo />
				</div>
				<div class="flex w-fit flex-col gap-0">
					<span class="flex h-fit gap-1.5 font-semibold md:text-xl dark:text-slate-100"
						>Jake<span class="font-bold text-blue-500">PIXL</span>Evans</span
					>
					<span class="-mt-1.5 h-fit text-xs font-semibold text-slate-600 md:text-sm"
						>IT Specialist & Software Developer</span
					>
				</div>
			</a>
			<div class="flex flex-row items-center gap-1">
				<span class="hidden text-sm opacity-50 md:block">Follow me on:</span>
				<a
					href="http://twitter.com/JakePIXL"
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-500 hover:text-blue-500"
				>
					<Icon name="fa6-brands:square-x-twitter" size="1.3rem" />
				</a>
				<a
					href="http://github.com/JakePIXL"
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-500 hover:text-blue-500"
				>
					<Icon name="mdi:github-box" size="1.5rem" />
				</a>
				<a
					href="https://www.linkedin.com/in/jakepixl/"
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-500 hover:text-blue-500"
				>
					<Icon name="mdi:linkedin-box" size="1.5rem" />
				</a>
				<a
					href="http://instagram.com/JakePIXL"
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-500 hover:text-blue-500"
				>
					<Icon name="mdi:instagram" size="1.5rem" />
				</a>
				<a
					href="https://ko-fi.com/jakepixl"
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-500 hover:text-blue-500"
				>
					<Icon name="simple-icons:kofi" size="1.5rem" />
				</a>
			</div>
		</header>
		<div class="mx-auto h-full w-full max-w-3xl flex-grow space-y-6">
			<slot />
		</div>
		<footer class="flex flex-col items-center justify-center p-4">
			<span class="text-sm md:text-base"
				>&copy; {new Date().getFullYear()} Jacob Evans. All Rights Reserved.</span
			>
			<span class="text-sm opacity-50"
				>Website Base: <a
					href="https://github.com/chrismwilliams/astro-theme-cactus"
					target="_blank"
					class="hover:text-blue-500">Astro Theme Cactus</a
				></span
			>
		</footer>
		<style is:global>
			:root {
				--accent: 124, 58, 237;
				--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
			}
			code {
				font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
					Bitstream Vera Sans Mono, Courier New, monospace;
			}
		</style>
	</body>
</html>
